{
  "version": "6.3",
  "screens": [
    {
      "terminal": true,
      "title": "RoadðŸ†˜-Report Accident",
      "id": "FLOW_RENT_CAR",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "name": "rent_a_car",
            "type": "Form",
            "children": [
              {
                "type": "TextSubheading",
                "text": "Record accident details"
              },
              {
                "input-type": "text",
                "label": "Location",
                "name": "location",
                "required": true,
                "type": "TextInput",
                "helper-text": "where the accident took place"
              },
              {
                "type": "Dropdown",
                "name": "accident_type",
                "label": "Accident Type",
                "required": true,
                "data-source": [
                  {
                    "id": "1",
                    "title": "Car collision"
                  },
                  {
                    "id": "2",
                    "title": "Pedestrian accident"
                  },
                  {
                    "id": "3",
                    "title": "Motorcycle accident"
                  },
                  {
                    "id": "4",
                    "title": "Truck accident"
                  },
                  {
                    "id": "5",
                    "title": "Bus accident"
                  },
                  {
                    "id": "6",
                    "title": "Other (please specify)"
                  }
                ]
              },
              {
                "input-type": "text",
                "label": "Last Name",
                "name": "lname",
                "required": true,
                "type": "TextInput"
              },
              {
                "type": "PhotoPicker",
                "name": "media",
                "label": "Accident pictures",
                "description": "Please attach accident scene pictures",
                "photo-source": "camera_gallery",
                "min-uploaded-photos": 3,
                "max-uploaded-photos": 10,
                "max-file-size-kb": 10240
              },
               {
                "type": "TextArea",
                "required": true,
                "label": "Additional Info",
                "name": "additional_info",
                "helper-text": "Any other details to note"
              },
              {
                "type": "Footer",
                "label": "Submit",
                "on-click-action": {
                  "name": "complete",
                  "payload": {
                    "screen": "FLOW_RENT_CAR",
                    "mobile": "${form.mobile}",
                    "license": "${form.license}",
                    "first_name": "${form.fname}",
                    "last_name": "${form.lname}",
                    "media": "${form.media}"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}